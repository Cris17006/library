<odoo>
    <template id="book_catalog">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <!-- Report header content -->
                    <div class="container" >
                        <div class="row b-primary">
                            <div class="col-3">Title</div>
                            <div class="col-2">Publisher</div>
                            <div class="col-2">Date</div>
                            <div class="col-3">Publisher Address</div>
                            <div class="col-2">Authors</div>
                        </div>
                        <t t-foreach="docs" t-as="o">
                            <!-- Report row content -->
                            <div class="row">
                                <div class="col-3">
                                    <span t-field="o.name"/>
                                </div>
                                <div class="col-2">
                                    <span t-field="o.publisher_id.name"/>
                                </div>
                                <div class="col-2">
                                    <span t-field="o.date_published"/>
                                </div>
                                <div class="col-3">
                                    <span t-field="o.publisher_id.street"/>
                                </div>
                                <div class="col-2">
                                    <!-- Render Authors -->
                                    <ul class="list-unstyled">
                                        <t t-foreach="o.author_ids" t-as="author">
                                            <span t-field="author.image_128" t-options="{'widget': 'image', 'style': 'max-width: 32px'}"/>
                                            <span t-field="author.name"/>
                                        </t>
                                    </ul>
                                </div>
                            </div>
                        </t>
                        <!-- Report footer content -->
                        <div class="row" style = "margin-top: 15px;">
                            <div class="col-3">
                                <p><t t-out = "len(docs)"/> books</p>
                            </div>
                            <div class="col-7"/>
                            <div class="col-2">
                                <p><t t-out = "len(docs.mapped('author_ids'))"/> Authors</p>
                            </div>
                        </div>
                    </div><!-- Container -->
                </div><!-- Page -->
            </t>
        </t>
    </template>
</odoo>